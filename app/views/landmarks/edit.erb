<h2>Edit Historical Landmark</h2>

<form method="post" action="/landmarks/<%=@landmark.id %>">
    <input type="hidden" name="_method" value="patch">
    <label>Name:</label>
    <input id="name" type="text" name="landmark[name]" value="<%=@landmark.name %>">
    <label>Year:</label>
    <input id="year_completed" type="integer" name="landmark[year_completed]" value="<%=@landmark.year_completed %>">
    <br>
    <button type="submit">Edit Landmark</button>
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
